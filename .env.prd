# Configuración Producción (GCP)
PROJECT_NAME="AI Resume Agent"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# LLM Provider
LLM_PROVIDER=gemini

# Gemini Configuration
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Database (Cloud SQL)
# Estos valores suelen inyectarse o usarse con Cloud SQL Proxy
CLOUD_SQL_HOST=
CLOUD_SQL_PORT=5432
CLOUD_SQL_DB=chatbot_db
CLOUD_SQL_USER=postgres
CLOUD_SQL_PASSWORD=
CLOUD_SQL_CONNECTION_NAME=

# Vector Store
VECTOR_COLLECTION_NAME=portfolio_knowledge
VECTOR_SEARCH_K=5

# Security & Config
SECRET_KEY=
CORS_ORIGINS=["https://almapi.dev"]

# Flags
TESTING=False
ENABLE_ANALYTICS=True
ENABLE_RESPONSE_CACHE=True
